<!DOCTYPE html>
<html>
  <head>
    <title>TradeVine App</title>
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
  <div class="navigation">
    <p align="center">
      <% if logged_in? %>
      <%= link_to "Submit a bottle", new_user_bottle_path(current_user) %> |
      <%= link_to "All Bottles", bottles_path %> |
      <%= link_to "My Bottles", user_bottles_path(current_user) %> |
      <%= link_to "All Categories", categories_path %> |
      <%= link_to "Leave A Review", new_review_path %> |
      <%= link_to "Home", user_path(current_user )%> |
      <%= link_to "Logout", logout_path, method: "delete" %>
      <% else %>
        <%= link_to "Sign Up", signup_path %> |
        <%= link_to "Login", login_path %>
      <% end %>
    </div>

    <div class="wrapper">

      <% if flash[:message] %>
        <h3 style="color: rgb(57, 11, 150);"><em><%= flash[:message] %></h3></em>
      <% end %>
      <% if flash[:errors] %>
        <h3 style="color: rgb(199, 28, 28);"><em><%= flash[:errors] %></h3></em>
      <% end %>

    <%= yield %>
  </body>
</html>
