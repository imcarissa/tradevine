<h1>Sign Up Page</h1>

<%= render partial: "layouts/_errors" locals: (object: @user) %>

<%= form_for (@user) do |f|%>
    <%= f.label :username %>
    <%= f.text_field :username %> |
    <%= f.label :email %>
    <%= f.email_field :email %> |
    <%= f.label :password %>
    <%= f.password_field :password %> |
    <%= f.submit "Submit" %>
<% end %>
