<h1>New Bottle Post</h1>


<%= render partial: "layouts/errors", locals: {object: @bottle} %>

<%= form_for(@bottle) do |f| %>
     
  Choose a category: <%= f.collection_select :category_id, Category.all, :id, :name %>
  <p>
  Or create a new one:
  <%= f.text_field :category_id, list: "categories_autocomplete" %>
  <datalist id="categories_autocomplete">
    <% Category.all.each do |category| %>
      <option value="<%= category.name %>">
    <% end %>
  </datalist>
    </p>


    <br><br>
    Wine Name: <%= f.text_field :wine_name %><br>
    Vintage: <%= f.text_field :vintage %><br>
    Region: <%= f.text_field :region %><br>
    Winery: <%= f.text_field :winery %><br>
    Description: <%= f.text_area :description %>
    <br><br>
    <%= f.submit %>
<% end %>
