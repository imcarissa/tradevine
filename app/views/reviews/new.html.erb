<% if @post %>
<h1>Write a review for <%= @bottle.name %></h1>
<% else %>
<h1>Write a review</h1>
<% end %>


<%= form_for([@bottle, @review]) do |f| %>
    <% if !@bottle %>
        <%= f.label :bottle %>
        <%= f.collection_select :bottle_id, Bottle.all, :id, :wine_name %>
    <% end %>
<br>
<br>
<br>
    Review<br>
    <%= f.text_area :content %><br>
    <%= f.submit "Submit" %>
<% end %>